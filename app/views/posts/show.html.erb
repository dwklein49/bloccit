<h1><%= markdown @post.title %></h1>

<div class="row">
  <div class="span8">
    <small>
      <%= image_tag(@post.user.avatar.tiny.url) if @post.user.avatar? %>
      submitted <%= time_ago_in_words(@post.created_at) %> ago by 
      <%= @post.user.name %>
    </small>    
    <p>
      <%= image_tag(@post.image) if @post.image? %>
      <%= markdown @post.body %>
    </p>
    <p> <%= render comment.body %> </p>
  </div>
  <div class="span4">
    <% if can? :edit, @post %>
      <%= link_to "Edit", edit_topic_post_path(@topic,@post), class: 'btn btn-large btn-block' %>
    <% end %>
    <% if can? :add, @comment %>
      <%= link_to "Comment", add_comment_post_path(@post, @comment), class: 'btn btn-large btn-block' %>
    <% end %>
  </div>
</div>